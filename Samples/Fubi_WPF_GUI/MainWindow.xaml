        IsEnabled="True"
        Height="800" Width="660" MinWidth="660" MinHeight="490"
        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
        Closed="Window_Closed" BorderBrush="Black" SizeChanged="Window_SizeChanged"
